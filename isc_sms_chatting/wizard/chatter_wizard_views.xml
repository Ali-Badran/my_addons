<odoo>
    <data>
        <record id="view_chatter_sms_wizard_form" model="ir.ui.view">
            <field name="name">view.chatter.sms.wizard.form</field>
            <field name="model">chatter.sms.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group colspan="4">
                            <field name="recipient" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="mobile_number"/>
                            <field name="sms_message"/>
                        </group>

                        <footer>
                            <button string="Send" name="send_sms" type="object" class="oe_highlight"/>
                            <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>