<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Project Risk -->
        <record id="view_project_risk_form" model="ir.ui.view">
            <field name="name">view.project.risk.form</field>
            <field name="model">project.risk</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="level"/>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="project_id"/>
                            </group>
                        </group>

                        <group>
                            <field name="suggested_solution"/>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_project_risk_tree" model="ir.ui.view">
            <field name="name">view.project.risk.tree</field>
            <field name="model">project.risk</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="level"/>
                    <field name="suggested_solution"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="open_project_risk_view" model="ir.actions.act_window">
            <field name="name">Project Risks</field>
            <field name="res_model">project.risk</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_project_risk"
                name="Project Risks"
                parent="project.menu_project_config"
                action="open_project_risk_view"
                sequence="5"/>
    </data>
</odoo>