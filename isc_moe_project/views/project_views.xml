<odoo>
    <data>
        <!-- Project -->
        <record id="edit_project_isc_inherit" model="ir.ui.view">
            <field name="name">project.project.form.isc.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="priority">30</field>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="action_project_risk_open" type="object" icon="fa-plus"
                            string="Risk"/>
                </xpath>

                <xpath expr="//page[@name='settings']" position="after">
                    <page name="project_risks_page" string="Risks">
                        <field name="project_risks" mode="tree" context="{'default_project_id': id}">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="level"/>
                                <field name="suggested_solution"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
