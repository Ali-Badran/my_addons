<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="projects_page" name="Projects">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <section class="pt32 pb32 oe_img_bg oe_custom_bg" data-name="Title"
                         style="background-image: url(&quot;http://localhost:8069/website/static/src/img/snippets_demo/s_carousel_3.jpg&quot;);">
                    <div class="container">
                        <div class="row s_nb_column_fixed">
                            <div class="col-lg-12 s_title pt16 pb16" style="text-align: center;">
                                <h1 class="s_title_default">
                                    <font style="font-size: 62px;">All Projects
                                        <br/>
                                    </font>
                                </h1>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="s_three_columns bg-200 pt32 pb32" data-name="Columns">
                    <div class="container">
                        <div class="row d-flex align-items-stretch">
                            <t t-foreach="projects" t-as="project">
                                <div class="s_col_no_bgcolor pt16 pb16 col-lg-6">
                                    <div class="card bg-white">
                                        <img class="card-img-top"
                                             src="/website/static/src/img/snippets_demo/s_quotes_carousel_2.jpg"
                                             alt="Odoo - Sample 1 for three columns" data-original-title="" title=""
                                             aria-describedby="tooltip768049"/>
                                        <div class="card-body">
                                            <h3 class="card-title" style="text-align: right;"><t t-esc="project.name"/></h3>
                                            <p class="card-text" style="text-align: right;"><p t-esc="project.project_description"></p></p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <template id="employee_details_page" name="Employee Details">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <br/>
                    <center>
                        <h3>Employee Details</h3>
                    </center>
                    <br/>
                    <table class="table-striped table">
                        <thead style="font-size: 23px;">
                            <tr>
                                <h6>
                                    <b>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th></th>
                                    </b>
                                </h6>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="token" t-value="token"/>
                            <t t-foreach="my_details" t-as="order">
                                <tr>
                                    <td>
                                        <span t-esc="order.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="order.work_email"/>
                                    </td>
                                    <td>
                                        <t t-set="project_id" t-value="order.id"/>
                                        <a t-attf-href="/project/payment?token=#{token}&amp;project_id=#{project_id}" class="btn btn-info">page</a>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="select_employee_page" name="Select Employee">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <form action="/employee/uploaded" method="post" enctype="multipart/form-data"
                          id="employee_select_form">
                        <div class="col-md-7 col-sm-8">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group" data-form-type="textbox" data-field-id="92">
                                <label class="control-label" for="national_id">Employee ID</label>
                                <input type="text" class="form-control" name="employee_id" maxlength="100"/>
                            </div>
                        </div>
                        <button type="submit" name="Upload" style="margin-top:20px;" class="btn btn-primary">Show</button>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>