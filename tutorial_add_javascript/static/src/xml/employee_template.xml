<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="hr_employee.department_info">
        <table>
            <thead>
                <td colspan="2">
                    <div><t t-esc="widget.department.data.display_name"/> Employees </div>
                </td>
            </thead>
            <tbody>
                <t t-if="widget.departmentEmployees.length === 0">
                    <tr>
                        None
                    </tr>
                </t>
                <t t-foreach="widget.departmentEmployees" t-as="emp">
                    <tr>
                        <td><t t-esc="emp.id[1]"/> - <t t-esc="emp.job_id[1]"/> </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>

    <div t-name="tutorial_add_javascript.EmployeeTemplate">
        <t t-if="widget.departmentEmployees">
            <t t-call="hr_employee.department_info"/>
        </t>
    </div>
</templates>
