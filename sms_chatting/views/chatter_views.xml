<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_chatter_sms_form" model="ir.ui.view">
            <field name="name">view.chatter.sms.form</field>
            <field name="model">chatter.sms</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="name"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_chatter_sms_tree" model="ir.ui.view">
            <field name="name">view.chatter.sms.tree</field>
            <field name="model">chatter.sms</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="open_chatter_sms_view" model="ir.actions.act_window">
            <field name="name">SMS Chatting</field>
            <field name="res_model">chatter.sms</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_chatter_sms_request" name="SMS Chatting"
                  parent="hr.menu_hr_employee_payroll"
                  action="open_chatter_sms_view" sequence="10"/>
    </data>
</odoo>